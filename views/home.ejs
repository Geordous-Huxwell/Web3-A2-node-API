<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Login Page</title>
    <link rel="stylesheet" type="text/css" href="./style.css">
</head>

<body>
    <div class="containerHome">
        <div class="welcome-container">
            <img src="<%= user.picture.large %>" id="profilePic" alt="User Profile Photo">
            <h2>
                <h1 class="welcome-message">Welcome back <span>
                 <%= user.details.firstname %>
                <%= user.details.lastname %></span> !
                </h1>

        </div>

        <ul style="list-style-type: none;">
            <li><b>See all Movies</b><a href="/movies" class="goButton">Go</a></li>
            <li>
                <form method="GET" onsubmit="event.preventDefault(); location.href='/movies/' + document.getElementById('linkID').value;">
                    <label for="linkID">Search by Movie ID:</label>
                    <input type="number" id="linkID" name="linkID">
                    <button type="submit" class="goButton">Go</button>
                </form>
            </li>
            <li>
                <form method="GET" onsubmit="event.preventDefault(); location.href='/movies/tmdb/' + document.getElementById('tmdblinkID').value;">
                    <label for="tmdblinkID">Search By TMDB id:</label>
                    <input type="number" id="tmdblinkID" name="tmdblinkID">
                    <button type="submit" class="goButton">Go</button>
                </form>
            </li>
            <li>
                <form method="GET" onsubmit="event.preventDefault(); location.href='/movies/limit/' + document.getElementById('limit').value;">
                    <label for="limit">Limit number of movies to run:</label>
                    <input type="number" id="limit" min="1" name="limit">
                    <button type="submit" class="goButton">Go</button>
                </form>
            </li>
            <li>
                <form method="GET" onsubmit="event.preventDefault(); location.href='/movies/year/' + document.getElementById('minYear').value +'/'+document.getElementById('maxYear').value ;">
                    <p><b>Show movies by release year range: </b></p>
                    <label for="minYear">Min: </label>
                    <input type="number" id="minYear" placeholder='YYYY' name="minYear">
                    <label for="maxYear">Max: </label>
                    <input type="number" id="maxYear" placeholder='YYYY' name="maxYear">
                    <button type="submit" class="goButton">Go</button>
                </form>
            </li>
            <li>
                <form method="GET" onsubmit="event.preventDefault(); location.href='/movies/ratings/' + document.getElementById('minRating').value +'/'+document.getElementById('maxRating').value ;">
                    <p><b>Show movies by rating average range:</b> </p>
                    <label for="minRating">Min: </label>
                    <input type="number" id="minRating" name="minRating">
                    <label for="maxRating">Max: </label>
                    <input type="number" id="maxRating" name="maxRating">
                    <button type="submit" class="goButton">Go</button>
                </form>
            </li>
            <li>
                <form method="GET" onsubmit="event.preventDefault(); location.href='/movies/title/' + document.getElementById('title').value ;">
                    <label for="title">Search by Movie Title: </label>
                    <input type="text" id="title" name="title">
                    <button type="submit" class="goButton">Go</button>
                </form>
            </li>
            <li>
                <form method="GET" onsubmit="event.preventDefault(); location.href='/movies/genre/' + document.getElementById('genre').value ;">
                    <label for="genre">Search by Movie Genre: </label>
                    <input type="text" id="genre" name="genre">
                    <button type="submit" class="goButton">Go</button>
                </form>
            </li>
        </ul>
        <p class="logout-button">
            <a href="/logout"><button>Logout</button></a>
        </p>
    </div>


</body>

</html>